							<!--<goal>shade</goal>-->
						<!--</goals>-->
						<!--<configuration>-->
							<!--&lt;!&ndash;<minimizeJar>true</minimizeJar>&ndash;&gt;-->
							<!--<transformers>-->
								<!--<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">-->
									<!--<manifestEntries>-->
										<!--<Build-Number>${project.version}</Build-Number>-->
									<!--</manifestEntries>-->
								<!--</transformer>-->
							<!--</transformers>-->
						<!--</configuration>-->
					<!--</execution>-->
				<!--</executions>-->
			<!--</plugin>-->
		</plugins>
	</build>



	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Nexuss Releses Repository</name>
			<url>
				https://repos.iflytek.com:8081/nexus/content/repositories/releases/
			</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Nexuss Snapshots Repository</name>
			<url>
				https://repos.iflytek.com:8081/nexus/content/repositories/snapshots/
			</url>
		</snapshotRepository>
	</distributionManagement>
</project>
